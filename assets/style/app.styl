@import './_variables'
@import './_attribute.styl'
@import './_sortable_list.styl'
@import './_dictionary_list.styl'
@import './_date_grid.styl'
@import './_tooltip.styl'

// Import Vuetify styling
@require '~vuetify/src/stylus/main.styl'

.page
  @extend .fade-transition

.sr-only
  position: absolute;
  left: -999999px;

div.hr
  height: 4px;
  background-color: $theme.secondary;
  margin: $spacers.three.y 0px;

.clickable {
  cursor: pointer;
}

.table.alt-table
  width: 100%;
  max-width: 100%;
  background-color: transparent;

  th, td
    padding: $spacers.two.y $spacers.two.x !important;
    vertical-align: top;
    border-top: $table-border-width solid $table-border-color;

  thead tr
    height: auto !important;

  thead th
    vertical-align: bottom;
    border-bottom: (2 * $table-border-width) solid $table-border-color;

  tbody + tbody
    border-top: (2 * $table-border-width) solid $table-border-color;

ul.list-unstyled
  list-style: none;

.underline-heading
  border-bottom: 1px solid $theme.secondary;

.small-caps
  font-variant: small-caps;

.me-title-logo
  width: 100%;
  height: auto;

@media screen and (min-width: 960px)
  .me-title-logo
    width: auto;
    height: 200px;

.parallax-title {
  text-shadow: 0px 0px 5px black;
  font-size: 4em;
}

.nav-brand {
  text-decoration: none;
}
.nav-brand img {
  width: 30px;
  vertical-align: middle;
}
.nav-brand span {
  margin-left: 15px;
  color: white;
}